  "Markdown table": {
    "prefix": "mdtable",
    "body": [
      "| First Header | Second Header | Third Header |",
      "| :----------- | :-----------: | -----------: |",
      "| Content Cell | Content Cell  | Content Cell |",
      "| Content Cell | Content Cell  | Content Cell |"
    ],
    "description": "A three-column table with alignment options"
  }
}
